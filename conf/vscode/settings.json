        // "tab.inactiveBorder": "#141414", // Inactive tab border
        // "tab.hoverBackground": "#1A1A1A", // Tab hover background
        // "tab.unfocusedHoverBackground": "#1A1A1A", // Tab hover
        // "panel.border": "#141414", // Bottom panel border
        // "panelTitle.activeBorder": "#007ACC", // Bottom panel title border
        // "panelTitle.activeForeground": "#FFFFFF", // Bottom panel title text color
        // "panelTitle.inactiveForeground": "#CCCCCC", // Bottom panel title text color when inactive
        // "statusBar.foreground": "#FFFFFF", // Bottom status bar text color
        // "statusBar.background": "#007ACC", // Bottom status bar background color
        // "statusBar.noFolderBackground": "#007ACC", // Bottom status bar when no folder is opened
        // "statusBar.debuggingBackground": "#CC6633", // Bottom status bar
        // "statusBarItem.hoverBackground": "#005A9E", // Status bar item hover background
        // "statusBarItem.prominentBackground": "#005A9E", // Prominent status bar item background
        // "statusBarItem.prominentHoverBackground": "#004578", // Prominent status bar item hover background
        // "sideBarSectionHeader.background": "#1E1E1E", // Sidebar section header background
        // "sideBarSectionHeader.foreground": "#FFFFFF", // Sidebar section header text color
        // "list.hoverBackground": "#2A2D2E", // List item hover background
        // "list.activeSelectionBackground": "#094771", // Active list item background
        // "list.activeSelectionForeground": "#FFFFFF", // Active list item text color
        // "list.inactiveSelectionBackground": "#37373D", // Inactive list item background
        // "list.inactiveSelectionForeground": "#FFFFFF", // Inactive list item text color
        // "list.focusBackground": "#094771", // Focused list item background      
        // "list.focusForeground": "#FFFFFF", // Focused list item text color
        // "scrollbarSlider.background": "#797979", // Scrollbar slider background
        // "scrollbarSlider.hoverBackground": "#646464", // Scrollbar slider hover background
        // "scrollbarSlider.activeBackground": "#BFBFBF" // Scrollbar slider active background
    },

    // LaTeX
    "latex-workshop.latex.recipe.default": "latexmk",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoBuild.run": "onSave",

    // Editor
    "editor.minimap.enabled": false,
    "editor.cursorSmoothCaretAnimation": "off",
    "editor.hideCursorInOverviewRuler": true,
    "editor.scrollbar.horizontal": "hidden",
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontalScrollbarSize": 0,
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.fontFamily": "'Ubuntu Mono'",
    "editor.fontSize": 18,
    "editor.renderWhitespace": "none",
    "editor.lineNumbers": "on",
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.inlineSuggest.enabled": false,
    "editor.bracketPairColorization.enabled": false,
    "editor.guides.bracketPairs": false,
    "editor.smoothScrolling": false,
    "editor.codeLens": false,
    "editor.lightbulb.enabled": "off",
    "editor.glyphMargin": false,
    "editor.peekWidgetDefaultFocus": "editor",
    "editor.hover.enabled": "off",
     
    // Ruff
    "ruff.importStrategy": "useBundled",
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnPaste": false,
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always",
        "source.fixAll": "always"
    },
    //"files.autoSave": "onFocusChange",

    // Docstring format
    "autoDocstring.docstringFormat": "google-notypes",

    // Terminal
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.smoothScrolling": false,
    "terminal.integrated.enableImages": true,

    // CMake
    "cmake.configureOnOpen": false,

    // Python
    "python.defaultInterpreterPath": "/home/matlev/sandbox-venv",
    "python.analysis.typeCheckingMode": "standard",
    
    // Git
    "git.openRepositoryInParentFolders": "always",
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.currentLine.enabled": false,

    // Misc
    "chat.commandCenter.enabled": false,
    "workbench.activityBar.location": "hidden",
}
